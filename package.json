{
  "name": "gulp-karma-runner",
  "version": "0.0.0",
  "description": "Gulp plugin for karma",
  "main": "lib/plugin.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Forumouth/gulp-karma-runner.git"
  },
  "keywords": [
    "gulpplugin",
    "gulp-karma",
    "gulp-karma-runner"
  ],
  "author": "Hiroaki Yamamoto <hiroaki@hysoftware.net>",
  "license": "MIT",
  "scripts": {
    "lint": "$(npm bin)/eslint  lib tests",
    "ncu": "$(npm bin)/ncu",
    "nyc": "$(npm bin)/nyc --reporter=lcov --reporter text $(npm bin)/mocha tests",
    "test": "npm run lint && npm run nyc"
  },
  "dependencies": {
    "karma": "^2.0.4",
    "plugin-error": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "chai": "^4.1.2",
    "eslint": "^5.0.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.12.0",
    "event-stream": "^3.3.4",
    "glob": "^7.1.2",
    "gulp": "^4.0.0",
    "karma-babel-preprocessor": "^8.0.0-beta.0",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "lodash": "^4.17.10",
    "mocha": "^5.2.0",
    "npm-check-updates": "^2.14.2",
    "nyc": "^12.0.1",
    "phantomjs-prebuilt": "^2.1.16",
    "vinyl": "^2.1.0"
  },
  "nyc": {
    "include": [
      "lib/**/*.js",
      "bin/**/*.js"
    ],
    "all": true
  }
}
